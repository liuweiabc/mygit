<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_publish_info"
        android:text="动态发布"
        android:textSize="40sp"
        android:textStyle="italic"
        android:textColor="@color/colorBrown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@color/colorBlue"/>
    <TextView
        android:id="@+id/tv_student_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_publish_info"
        android:textSize="18sp"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="标题"
        android:textSize="22sp"
        android:layout_below="@+id/tv_student_id"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp" />
    <EditText
        android:id="@+id/et_title"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_student_id"
        android:layout_marginTop="20dp"
        android:layout_marginStart="105dp"
        android:textColor="@color/colorBlue"
        android:maxLines="1"
        android:hint="请输入标题"
        android:textSize="18sp"
        android:layout_marginLeft="105dp" />
    <TextView
        android:id="@+id/tv_type"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="类别"
        android:textSize="22sp"
        android:layout_below="@+id/tv_title"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp" />
    <Spinner
        android:id="@+id/spn_type"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/et_title"
        android:layout_marginTop="20dp"
        android:layout_marginStart="105dp"
        android:entries="@array/product_type"
        android:layout_marginLeft="105dp" />
    <TextView
        android:id="@+id/tv_description"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="内容"
        android:textSize="22sp"
        android:layout_below="@+id/tv_type"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp" />

    <EditText
        android:id="@+id/et_description"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_below="@+id/tv_description"
        android:layout_marginTop="18dp"
        android:background="@drawable/comment_edittext_round_corner_bg"
        android:maxLines="5"
        android:textColor="@color/colorBlue"
        android:textSize="18sp"
        android:layout_marginLeft="25dp"/>

    <ImageButton
        android:id="@+id/iv_photo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/icon_take_photo"
        android:scaleType="centerCrop"
        android:layout_below="@id/et_description"
        android:layout_marginTop="10dp" />
    <Button
        android:id="@+id/btn_publish"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_photo"
        android:text="发布"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_publish"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"/>
    <Button
        android:id="@+id/btn_back"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_photo"
        android:text="返回"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_cancel"
        android:layout_marginStart="205dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="205dp"
        android:layout_marginRight="10dp" />
</RelativeLayout>