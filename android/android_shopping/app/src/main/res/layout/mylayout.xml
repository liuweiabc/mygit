<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dongtaibackground"
    android:scaleType="fitXY">
    <ImageView
        android:id = "@+id/head1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src = "@drawable/headimg"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"/>
    <TextView
        android:id = "@+id/name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/head1"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="15dp"
        android:text = "test"/>

    <TextView
        android:id = "@+id/tasktime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/head1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:text = "最新动态：特别喜欢这家的风格......"/>

    <LinearLayout
        android:id = "@+id/lin5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/tasktime"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="50dp">
        <ImageView
            android:id = "@+id/onephoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src = "@drawable/onephoto"/>
        <ImageView
            android:id = "@+id/twophoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src = "@drawable/twophoto"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:id = "@+id/threephoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src = "@drawable/threephoto"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/lin5"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="15dp">
        <Button
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:background="#FFFFFF"
            android:text="点赞"/>
        <Button
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:background="#FFFFFF"
            android:text="评论"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>

</RelativeLayout>